<div class="song-list__header-controls float-right">
  {{#if feed.site_url}}
    <button class="js-unsubscribe-feed">Unsubscribe</button>
  {{/if}}
  <button class="js-mark-all-as-heard">Mark all as heard</button>
  <button class="js-toggle-view-heard">
    {{#if user.hide_heard_songs}} Show {{else}} Hide {{/if}} heard songs
  </button>
  <button>
    <i class="icon-gear"></i>
  </button>

  <div style="display:none">
    <span class="l-ellip">{{user.email}}</span>
    <form class="float-right" method="post" action="/users/sign_out">
      <input name="_method" type="hidden" value="delete" />
      <input class="link-button" value="Sign out" type="submit" />
    </form>
  </div>
</div>

<h2 class="song-list__title l-ellip">
  {{#if feed.site_url}}
    <a href="{{feed.site_url}}" target="blank">{{feed.title}}</a>
  {{else}}
    {{feed.title}}
  {{/if}}
</h2>
