<li class="{{{selectedFeedClass selectedFeedId 'all'}}}">
  <a href="#">
    <i class="icon-music feed__icon"></i>
    <span class="feed__unheard-count">
      {{{totalUnheardCount feeds}}}
    </span>
    <span class="feed__title">All</span>
  </a>
</li>

<li "{{{selectedFeedClass selectedFeedId 'favorites'}}}">
  <a class="l-ellip" href="/#/favorites">
    <i class="icon-heart feed__icon"></i>
    <span class="feed__title">Favorites</span>
  </a>
</li>

{{#each feeds}}
  <li class="{{{selectedFeedClass ../selectedFeedId id}}}">
    <a href="#/feeds/{{id}}">
      <i class="feed__icon">
        <img src="http://g.etfv.co/{{{site_url}}}">
      </i>
      <span class="feed__unheard-count">{{unheard_count}}</span>
      <span class="feed__title">{{title}}</span>
    </a>
  </li>
{{else}}
  <li>No feeds.</li>
{{/each}}
